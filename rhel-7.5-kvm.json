{
	"variables": {
		"vm_name": "rhel-7.5-kvm",
		"iso_url": "{{env `ISO_URL`}}",
		"sa_username": "{{env `SUB_USERNAME`}}",
		"sa_password": "{{env `SUB_PASSWORD`}}",
		"iso_sha256": "d0dd6ae5e001fb050dafefdfd871e7e648b147fb2d35f0e106e0b34a0163e8f5"
	},

	"builders": [{
		"type": "qemu",
		"vm_name": "{{user `vm_name`}}",
		"disk_size": "10000",
		"format": "qcow2",
		"headless": false,
		"accelerator": "kvm",
		"iso_checksum_type": "sha256",
		"iso_url": "{{user `iso_url`}}",
		"iso_checksum": "{{user `iso_sha256`}}",
		"http_directory": "http",
		"ssh_wait_timeout": "20m",
		"ssh_username": "vagrant",
		"ssh_password": "vagrant",
		"boot_wait": "5s",
		"net_device": "virtio-net",
		"disk_interface": "virtio",
		"shutdown_command": "sudo sync; sleep 10; sudo /usr/sbin/shutdown -P now; sleep 120;",
		"boot_command": [
			"<esc><wait>",
			"vmlinuz initrd=initrd.img net.ifnames=0 biosdevname=0 ",
			"ks=http://{{.HTTPIP}}:{{.HTTPPort}}/kvm-ks.cfg",
			"<enter>"
		]
	}],

	"provisioners": [{
		"type": "shell",
		"execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
		"environment_vars" : [
			"SUB_USERNAME={{user `sub_username`}}",
			"SUB_PASSWORD={{user `sub_password`}}"
		],
		"scripts": [
			"scripts/register.sh",
			"scripts/update.sh",
			"scripts/epel.sh",
			"scripts/vagrant.sh",
			"scripts/sshd.sh",
			"scripts/unregister.sh",
			"scripts/cleanup.sh"
		]
	}],

	"post-processors": [{
		"type": "vagrant",
		"output": "{{user `vm_name`}}.box"
	}]


}
